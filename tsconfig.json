{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/"],
  "exclude": ["src/ui"]
}